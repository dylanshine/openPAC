<ul class="title-area">
  <li class="name">
    <h1><%= link_to 'openPAC', root_path, method: :get %></h1>
  </li>
  <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
</ul>
<section class="top-bar-section">
  <!-- Left Nav Section -->
  <ul class="left">
    <% if !logged_in? %>
    <li><%= link_to 'Login', login_path, method: :get %></li>
    <li><%= link_to 'Signup', signup_path, method: :get %></li>
    <% else %>
    <li>
      <a data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" data-options="is_hover: true"><%= current_user.username %></a>
      <ul id="drop1" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to 'Logout', logout_path, method: :get %></li>
      </ul>
    </li>
    <% end %>
    <li>
      <a data-dropdown="drop2" aria-controls="drop2" aria-expanded="false" data-options="is_hover: true">Stances</a>
      <ul id="drop2" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
        <li><%= link_to 'See all', stances_path, method: :get %></li>
        <% if !logged_in? %>
        <li><%= link_to 'Take a Stance', login_path, method: :get %></li>
        <% else %>
        <li><%= link_to 'Take a Stance', new_stance_path, method: :get %></li>
        <% end %>
      </ul>
    </li>
    <li><%= link_to 'Legislators', legislators_path, method: :get %></li>
  </ul>
</section>
