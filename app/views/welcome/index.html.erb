<div class="row">
  <div class="large-12 columns center-text">
      <h1>openPAC</h1>
      <h4>State your position. Take a stance.</h4>
  </div>
</div>

<div class="row">
  <div class="large-centered">
    <div class="large-6 columns">
      <%= form_tag "/search", method: :get do %>
      <%= text_field :search, :words, placeholder: "Search for stances" %>
    </div>
    <div class="large-6 columns">
      <%= submit_tag "Submit", class: "button small radius" %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns center-text">

      <% Issue.fetch(3).each do |issue| %>
        | <a href="/stances/issues/<%= issue.description %>" data-search> <%= issue.description %> </a>
      <% end %>
      |
  </div>
</div>

<div class="row">
  <div class="large-10 columns large-centered">
    <%= image_tag("mapbydistrict.png") %>
  </div>
</div>
