<%# why do we have to specify the URL? shouldn't that happen for free using a form_for? %>
<%= form_for upvote, url: '/upvotes/create' do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :stance_id, :value => @stance.id %>
  <%= f.submit "Upvote Stance", class: "button small radius" %>
<% end %>
